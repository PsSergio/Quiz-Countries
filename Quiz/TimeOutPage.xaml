<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Quiz.TimeOutPage"
             Title="TimeOutPage"
             Shell.NavBarIsVisible="False"
             BackgroundColor="#FFFFFF">
    <VerticalStackLayout>

        <Image
                Source="icon_dark"
                WidthRequest="50"
                Margin="25, 20, 0, 100"
                HorizontalOptions="Start"/>

        <Label
            Text="Time is over!"
            TextColor="#2F2F2F"
            FontSize="34"
            FontFamily="Itim"
            HorizontalOptions="Center"
            Margin="0, 0, 0, 40"
            />

        <Image
            Source="time_out"
            HorizontalOptions="Center"
            WidthRequest="221"
            />

        <Button
                x:Name="btnTimeOut"
                Clicked="btnTimeOut_Clicked"
                Text="See results"
                WidthRequest="200"
                Padding="3"
                Margin="0, 60, 0, 0"
                BorderWidth="0"
                CornerRadius="30"
                FontSize="30"
                FontFamily="Itim"
                TextColor="White"
                BackgroundColor="#2F2F2F"
                />
    </VerticalStackLayout>
</ContentPage>
